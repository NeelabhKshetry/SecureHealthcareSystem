@model HealthcareSystemDesign.Models.Billing
@using Microsoft.Extensions.Options
@inject IOptions<HealthcareSystemDesign.StripeSettings> Stripe


<h1>Invoice</h1>

<div>
    <h4>Billing</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Visit Date
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BillingDate)
        </dd>
        <dt class="col-sm-2">
            Amount
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BillingAmount)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Paid)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Paid)
        </dd>
        <dt class="col-sm-2">
            Patient Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Patient.PatientName)
        </dd>
        <dt class="col-sm-2">
            Patient Address
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Patient.Address)
        </dd>
    </dl>
</div>
